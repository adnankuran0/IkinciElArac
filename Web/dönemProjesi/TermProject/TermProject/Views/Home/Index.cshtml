        @await Html.PartialAsync("_VehicleCardPartial", new { Id = 1, Title = "Renault Clio 2018", Subtitle = "Benzin • 75k km", Price = "₺ 450,000", ImageUrl = Url.Content("~/images/vehicle1.jpg") })
