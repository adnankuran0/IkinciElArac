@{
    ViewData["Title"] = "Vitrin";
}
<div class="row mb-4">
    <div class="col-12">
        <div class="p-4 bg-light rounded">
            <h1>Hoşgeldiniz</h1>
            <p class="lead">En yeni ilanlar ve fırsatlar burada.</p>
        </div>
    </div>
</div>

<div class="row g-3">
