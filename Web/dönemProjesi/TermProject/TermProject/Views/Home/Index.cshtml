        @await Html.PartialAsync("_VehicleCardPartial", new { Id = 2, Title = "Fiat Egea 2019", Subtitle = "Dizel • 60k km", Price = "₺ 520,000", ImageUrl = Url.Content("~/images/vehicle2.jpg") })
