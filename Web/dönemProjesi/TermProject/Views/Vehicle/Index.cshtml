@{
    ViewData["Title"] = "Ýlanlar";
    // Query deðerini önce deðiþkene alýyoruz - Razor parser'ýn karmaþýk inline ifadelerle sorun çýkarmasýný engellemek için
    var searchQuery = HttpContext?.Request?.Query["search"].ToString() ?? string.Empty;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Ýlanlar</h2>
    <div>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a class="btn btn-success" asp-controller="Vehicle" asp-action="Create">Ýlan Ver</a>
        }
        else
        {
            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Giriþ Yap</a>
        }
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form class="row g-2" asp-controller="Vehicle" asp-action="Index" method="get">
            <div class="col-sm-6 col-md-4">
                <input class="form-control" name="search" placeholder="Ýlanlarda ara..." value="@searchQuery" />
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary" type="submit">Ara</button>
            </div>
        </form>
    </div>
</div>

