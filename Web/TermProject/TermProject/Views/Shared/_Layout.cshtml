<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TermProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">İkinci El Araç</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "Index", System.StringComparison.OrdinalIgnoreCase) && string.Equals(ViewContext.RouteData.Values["controller"]?.ToString(), "Home", System.StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Vehicle" asp-action="Index">İlanlar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Average" asp-action="Index">Ortalama Fiyat</a>
                        </li>

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vehicle" asp-action="Create">İlan Ver</a>
                            </li>
                        }
                        @if (User?.IsInRole("Admin") == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Admin" asp-action="Dashboard">Admin</a>
                            </li>
                        }
                    </ul>

                    <form class="d-flex me-3" asp-controller="Vehicle" asp-action="Index" method="get" role="search">
                        <input class="form-control form-control-sm me-2" name="search" placeholder="Ara..." aria-label="Ara" />
                        <button class="btn btn-outline-secondary btn-sm" type="submit">Ara</button>
                    </form>

                    <div class="d-flex align-items-center">
                        @await Component.InvokeAsync("UserMenu")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-3 d-flex justify-content-between">
            <div>&copy; @DateTime.Now.Year - TermProject</div>
            <div>
                <a class="text-muted me-2" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                <a class="text-muted" asp-controller="Home" asp-action="About">Hakkımızda</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>