@{
    Layout = "_Layout";
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h3>Kayıt Ol</h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-controller="Account" asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Ad</label>
                    <input name="ad" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Soyad</label>
                    <input name="soyad" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">E-posta</label>
                    <input name="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Parola</label>
                    <input name="password" type="password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefon (isteğe bağlı)</label>
                    <input name="telefon" class="form-control" placeholder="5xx..." />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>